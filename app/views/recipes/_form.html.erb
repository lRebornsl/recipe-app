<%= form_with(model: [current_user, recipe], local: true, url: user_recipes_path(current_user)) do |form| %>
  <% if recipe.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "w-full" %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: "w-full" %>
  </div>

  <div>
    <%= form.label :preparation_time, "Preparation Time (minutes):" %>
    <%= form.number_field :preparation_time, min: 0, class: "w-full" %>
  </div>

  <div>
    <%= form.label :cooking_time, "Cooking Time (minutes):" %>
    <%= form.number_field :cooking_time, min: 0, class: "w-full" %>
  </div>

  <div class="pt-4">
    <%= form.label :public %>
    <%= form.check_box :public %>
  </div>

  <div class="my-4 text-center border border-black">
    <%= form.submit "Create Recipe" %>
  </div>

  <div class="border border-black text-center">
    <%= link_to "Back to recipes", user_recipes_path %>
  </div>
<% end %>