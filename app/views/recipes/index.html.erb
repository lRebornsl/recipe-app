<p style="color: green"><%= notice %></p>

<h1>Public Recipes</h1>

<div id="recipes" class="border border-solid border-black rounded-md p-4">
  <% @recipes.each do |recipe| %>
    <%= render recipe %>
    <strong>Status:</strong> <%= recipe.public ? "Public" : "Private" %>
    <p>
      <%= link_to "Show this recipe", user_recipe_path(current_user, recipe) %> |
      <%= button_to "Delete", user_recipe_path(current_user, recipe), method: :delete %>
    </p>
  <% end %>
</div>

<%= link_to "New recipe", new_user_recipe_path(current_user) %>
