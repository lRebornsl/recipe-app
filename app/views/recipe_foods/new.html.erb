<section class="w-3/4">
  <h1 class="text-2xl font-bold text-center py-4">Add foods to <%= @recipe.name %></h1>
  <div class="m-auto">
    <%= form_with(model: [@recipe, @new_recipe_food], url: user_recipe_recipe_foods_path(current_user, @recipe), class: 'container') do |form| %>
      <div>
        <div class="pb-4">
          <%= form.hidden_field :recipe_id, value: @recipe.id %>
          <%= form.collection_select :food_id, @foods, :id, :name, prompt: 'Select food' %>
        </div>
        <div>
          <%= form.label :quantity, "Necessary quantity:", class: 'col-form-label' %>
          <%= form.number_field :quantity, :required => true, class: 'w-full' %>
        </div>
        <div class="flex justify-center pt-4">
          <%= form.submit "Add", class: 'border border-black px-4 mr-4' %>
          <%= link_to 'Cancel', user_recipe_path(current_user, @recipe), class: 'border border-black px-4' %>
        </div>
      </div>
    <% end %>
  </div>
</section>
